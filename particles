# Teleport to the folder and ensure particlesGPU1 exists
proj  = op('/project1')
base  = proj.op('unitel_face_particles') or proj.create('baseCOMP','unitel_face_particles')
parts = base.op('particles') or base.create('baseCOMP','particles')

pg1 = parts.op('particlesGPU1') or parts.create('baseCOMP','particlesGPU1')
pg1.color  = (0.5, 0.8, 1.0)
pg1.nodeX, pg1.nodeY = 0, 0

# Show where you are and what exists
print("Now at:", parts.path)
for c in parts.children:
    print(" -", c.path, "â†’", c.OPType)

# Focus the first pane on the particles folder so you can see it
try:
    ui.panes[0].owner = parts
except:
    pass

print("Done. You should now see 'particlesGPU1' inside:", parts.path)
